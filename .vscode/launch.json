{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "TypeScript",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "node",
        "runtimeArgs": ["--nolazy", "--preserve-symlinks", "-r", "ts-node/register/transpile-only"],
  
        "args": ["compiler/compiler.ts"],
        
        "cwd": "${workspaceRoot}",
        "internalConsoleOptions": "openOnSessionStart",
        "skipFiles": ["<node_internals>/**", "node_modules/**"]
      }
    ]
  }